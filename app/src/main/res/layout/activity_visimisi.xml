<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Visimisi"
    android:background="@drawable/lambang">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120sp"
            android:layout_marginTop="20sp"
            android:src="@drawable/coconut"
            android:layout_marginHorizontal="20sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:text="--VISI dan MISI--"
            android:textSize="25sp"
            android:textColor="#fff"
            android:fontFamily="monospace"
            android:textAlignment="center"
            />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--> Visi :"
            android:textSize="20sp"
            android:textColor="#fff"
            android:fontFamily="monospace"
            android:layout_marginTop="10sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:text=" Coconut bertujuan membentuk mahasiswa yang kreatif untuk mewujudkan Tri Darma Perguruan Tinggi dan Sumpah Mahasiswa yang mengarah pada pengembangan kreativitas mahasiswa dalam bidang penalaran dan keilmuan yang berkaitan dengan spesialisasi IT."
            android:layout_marginTop="10sp"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--> Misi :"
            android:textSize="20sp"
            android:textColor="#fff"
            android:fontFamily="monospace"
            android:layout_marginTop="10sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#fff"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:text="  1. Mengarahkan Mahasiswa untuk berperan aktif dalam mewujudkan cita-cita dan tujuan nasional melalui Tri Darma Perguruan Tinggi dan Sumpah Mahasiswa."
            android:textAlignment="center"
            android:layout_marginTop="10sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#fff"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:text="  2. Membina dan Mengembangkan kualitas serta meningkatkan kesejahteraan anggota."
            android:textAlignment="center"
            android:layout_marginTop="10sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#fff"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:text="  3. Usaha-usaha lain secara nyata dan bertanggung jawab yang menunjang tujuan organiasi."
            android:textAlignment="center"
            android:layout_marginTop="10sp"/>
    </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>